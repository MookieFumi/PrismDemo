<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PrismDemo"
    x:Class="PrismDemo.Views.MainPage"
    Title="{Binding Title}">
    <StackLayout>
        <Label
            Text="Welcome to Xamarin.Forms with Prism!"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand" />
        <Button Text="Go to About (Absolute)" Command="{Binding GotoAboutAbsoluteCommand}"/>
        <Button Text="Go to About" Command="{Binding GotoAboutCommand}"/>
        <Button Text="Go to Author (Tabbed)" Command="{Binding GotoAuthorCommand}"/>
        <Button Text="Go to Version (Tabbed)" Command="{Binding GotoVersionCommand}"/>
        <Button Text="Go to Configuration  (Modal)" Command="{Binding GotoConfigurationCommand}"/>
    </StackLayout>
</ContentPage>